@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2 style="text-align:center; margin-left:-200px; margin-bottom:20px;">Burası Grafik Alanıdır</h2>
        <div id="chartdiv" style="width:800px; height:600px"></div>
    </div>
</div>

<!-- jQuery ekle -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Google Charts ekle -->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
    google.charts.load('current', { packages: ['corechart'] });
    google.charts.setOnLoadCallback(DrawonLoad);

    function DrawonLoad() {
        $.ajax({
            type: 'GET',
            url: '/Chart/ProductChart',
            success: function (chartsdata) {
                var Data = chartsdata.jsonlist;
                var data = new google.visualization.DataTable();
                data.addColumn('string', 'Ürün');
                data.addColumn('number', 'Değer');

                for (var i = 0; i < Data.length; i++) {
                    data.addRow([Data[i].productname, Data[i].productvalue]);
                }

                var chart = new google.visualization.PieChart(document.getElementById('chartdiv'));
                chart.draw(data, {
                    title: "Google Chart Core Projesi",
                    legend: { position: 'top' },
                    fontSize: 16
                });
            }
        });
    }
</script>
